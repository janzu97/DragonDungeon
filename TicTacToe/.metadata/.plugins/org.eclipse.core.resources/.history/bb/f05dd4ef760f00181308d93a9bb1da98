import java.io.File;
import java.util.ArrayList;

public class Main {
	static Player p=new Player();
	static Controller c;
	static boolean selected=false;
	static boolean running=true;
	static Dragon d=new Dragon();
	public static void main(String[] args) {
		Runnable r = new Runnable() {
			public void run() {
				c=new Controller();
				c.launch();
			}
		};
		Musicplayer.playSong();
		p.setName();

		Thread t=new Thread(r);
		t.start();
		SReader.read(SReader.ReadFile(new File("res\\dialogue\\Opening.txt")));
		SReader.read(SReader.ReadFile(new File("res\\dialogue\\BattleOP.txt")));
		Runnable run = new Runnable() {
			public void run() {
				while(running) {
				SReader.update(c.processCurrentSelection());
				try {
					Thread.sleep(1000);
				} catch (InterruptedException e) {
					// TODO Auto-generated catch block
					e.printStackTrace();
				}
				}}};
				Thread th=new Thread(run);
				th.start();		
		player_choose();
		d.move();
		
	}
	public long getScore(Dragon D) {
		return D.getScore();
	}
	public static void player_choose() {
		c.active=true;
		int sel=0;
		ArrayList<String> options=new ArrayList<String>();
		options.add("Melee");
		options.add("Magic");
		options.add("Item");
		options.add("Run");
		c.setMAX_loc(4,options);
		while(true) {
			
			if(selected) {
				sel=c.getLoc();
				c.active=false;
				selected=false;
				break;
			}
			try {
				Thread.sleep(100);
			} catch (InterruptedException e) {
				e.printStackTrace();
			}
		}
		if(sel==1) {
			chose_melee();
		}else if(sel==2) {
			chose_magic();
		}else if(sel==3) {
			chose_Item();
		}else {
			chose_run();
		}

	}

	public static void chose_melee() {
		System.out.println("melee");
	}
	public static void chose_magic() {
		System.out.println("Magic");
	}
	public static void chose_Item() {
		System.out.println("Item");
	}
	private static void chose_run() {
		System.out.println("Run");
	}
	public static Player getPlayer() {
		return p;
	}

}


