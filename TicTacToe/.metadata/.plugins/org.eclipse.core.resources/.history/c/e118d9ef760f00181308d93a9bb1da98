import java.awt.event.KeyEvent;
import java.awt.event.KeyListener;
import java.util.ArrayList;

import javax.swing.JFrame;
import javax.swing.JPanel;

public class Controller extends JPanel implements KeyListener{
	boolean active=false;
	private int location=1;
	int loc_MAX=10;
	ArrayList<String> options=new ArrayList<String>();

	JFrame frame=new JFrame();
	public void launch() {
		frame.setSize(200, 200);
		frame.addKeyListener(this);
		frame.setDefaultCloseOperation(frame.EXIT_ON_CLOSE);
		frame.setTitle("GameController");
		frame.setVisible(true);
		
		
	}
	public void setMAX_loc(int val,ArrayList<String> OPTIONS) {
		loc_MAX=val;
		location=1;
		options=OPTIONS;
	}
	
			
	@Override
	public void keyPressed(KeyEvent e) {
	if(active) {
		if(e.getKeyCode()==KeyEvent.VK_UP) {
			
			if(location>1) {
				location--;
			}else {
				location=loc_MAX;
			}
			System.out.println(location);
		}else if(e.getKeyCode()==KeyEvent.VK_DOWN) {
			
			if(location<loc_MAX) {
				location++;
			}else {
				location=1;
			}
			System.out.println(location);
		}else if(e.getKeyCode()==KeyEvent.VK_ENTER) {
			System.out.println(active);
			Main.selected=true;
			
		}
	}
	}

	@Override
	public void keyReleased(KeyEvent e) {
		
	}

	@Override
	public void keyTyped(KeyEvent e) {
		
	}
	public String processCurrentSelection() {
		String tframe=AnimationProcessor.getframe();
		for(int i=1; i<=loc_MAX; i++) {
			tframe+=options.get(i-1);
			if(i==location) {
				tframe+="<";
				
			}
			tframe+="\n";
		}
		return tframe;
	}
	public int getLoc() {
		return location;
	}

}
